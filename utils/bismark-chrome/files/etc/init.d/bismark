#!/bin/sh /etc/rc.common
# Copyright (C) 2006 OpenWrt.org
START=50

BIN=lighttpd
DEFAULT=/etc/default/bismark
LOG_D=/var/log/bismark
RUN_D=/var/run
PID_F=$RUN_D/bismark.pid
OPTIONS="-f /etc/lighttpd/bismark.conf"

start() {
	[ -f $DEFAULT ] && . $DEFAULT
	mkdir -p $LOG_D
	mkdir -p $RUN_D
	$BIN $OPTIONS
}

stop() {
	[ -f $PID_F ] && kill $(cat $PID_F)
}
