#!/bin/sh
/etc/init.d/bismark-authn-check enable
(crontab -l | grep -v bismark-authn-check; echo '0 0 * * * /usr/bin/bismark-authn-check -d') | crontab -
sed s/"# GatewayName NoDogSplash"/"GatewayName https://register.projectbismark.net/accounts/register/"/ /etc/nodogsplash/htdocs/images/nodogsplash.conf >/etc/nodogsplash/htdocs/images/nodogsplash2.conf
rm /etc/nodogsplash/htdocs/images/nodogsplash.conf
mv /etc/nodogsplash/htdocs/images/nodogsplash2.conf /etc/nodogsplash/nodogsplash.conf
mv /etc/nodogsplash/htdocs/images/splash.html /etc/nodogsplash/htdocs/
/etc/init.d/nodogsplash restart
